// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Product {
  id                Int      @id @default(sequence())
  active            Boolean  @default(false)
  addonOnly         Boolean  @default(false)
  name              String
  shortDescription  String?
  fullDescription   String?
  price             Decimal?
  createdAt         DateTime @default(now())
  addons            Product[] @relation("Addons", references: [id])
  addonTo           Product[] @relation("Addons", references: [id])
  allergens         Allergen[]
}

enum Allergen {
  CELERY
  GLUTEN
  CRUSTACEAN
  EGGS
  FISH
  LUPIN
  MILK
  MOLLUSCS
  MUSTARD
  NUTS
  PEANUTS
  SESAME
  SOYA
  SULPHITES
}
